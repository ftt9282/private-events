<%= form_for(@event) do |f| %>
  <div>
    <%= f.label :name, "Event Name" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "Describe your event..." %>
  </div>
  <div>
    <%= f.label :date %>
    <%= f.date_select :date %>
  </div>
  <div>
    <%= f.submit "Submit" %>
<% end %>